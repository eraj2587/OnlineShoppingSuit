@model ECommerce.WebAdmin.Models.OrderViewModel

@{
    ViewBag.Title = "Place Order";
}

<h2>PlaceOrder</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Desc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Desc)
                @Html.ValidationMessageFor(model => model.Desc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductQty, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductQty)
                @Html.ValidationMessageFor(model => model.ProductQty)
            </div>
        </div>

        <div class="form-group">
        <span class="control-label col-md-2">Select Product</span>  
            <div class="col-md-10">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.ProductModels.First().ProductCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.ProductModels.First().ProductName)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => Model.ProductModels.First().Price)
                        </th>
                        <th></th>
                    </tr>

                    @for (int i = 0; i < Model.ProductModels.Count(); i++)
    {
        <tr>

            <td>
                @Html.EditorFor(modelItem => modelItem.ProductModels[i].ProductCode)
            </td>
            <td>
                @Html.EditorFor(modelItem => modelItem.ProductModels[i].ProductName)
            </td>

            <td>
                @Html.TextBoxNumericFor(modelItem => modelItem.ProductModels[i].Price)
            </td>
        </tr>
    }

                    @*@foreach(var ProductModel in Model.ProductModels)
        {
            <tr>
                    @Html.EditorFor(modelItem => ProductModel)
            </tr>
        }*@




                </table>
</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

