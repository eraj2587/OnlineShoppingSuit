@model IEnumerable<ECommerce.WebAdmin.Models.OrderViewModel>

@{
    ViewBag.Title = "ViewOrders";
}

<h2>View Orders</h2>

<div class="row">
    <div class="pull-right">
        <button class="glyphicon glyphicon-export" onclick=" location.href = '@Url.Action("ExportToCsv", "Order", new {model = @Model})' "/>
    </div>
</div>

    <div class="row">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Desc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductQty)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductQty)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
