@model ECommerce.WebAdmin.Models.ProductModel[]
<table class="table" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().ProductCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ProductName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.First().Price)
        </th>
        <th></th>
    </tr>

@for (int i = 0; i < Model.Count(); i++)
{
    <tr>
        
        <td>
            @Html.EditorFor(ProductModels => ProductModels[i].ProductCode)
        </td>
        <td>
            @Html.EditorFor(ProductModels => ProductModels[i].ProductName)
        </td>
      
        <td>
            @Html.EditorFor(ProductModels => ProductModels[i].Price)
        </td>
    </tr>
}

</table>
